#!/bin/bash

VARIABLES_FILE=/etc/tilerator/variables.yaml
CASSANDRA_SERVER=$(cat $VARIABLES_FILE | grep cassandra-servers | cut -d' ' -f 2)
CASSANDRA_PORT=9042

for i in `seq 1 100`; do
    if [[ "$(nmap -p $CASSANDRA_PORT $CASSANDRA_SERVER | grep tcp | cut -d' ' -f 2)" == "open" ]]; then
        exit 0
    fi
    sleep 1
done
exit 1

